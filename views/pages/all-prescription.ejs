<body>

    <!--================ Start Header Menu Area =================-->
    <%- include('../templates/header.ejs') %>
    <!--================ End Header Menu Area =================-->
    <section class="section_gap ">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row justify-content-center">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" id="postsTable">
                                <thead class="bg-primary">
                                    <tr>
                                        <th scope="col">Drug Name</th>
                                        <th scope="col">Usage (Daily)</th>
                                        <th scope="col">Duration (Days)</th>
                                        <th scope="col">Date Added</th>
                                        <th scope="col">Action</th>
                                        <th scope="col">Verify</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <% if (data.length > 0 ) { %>
                                    <% data.forEach(u => { %>
                                    <tr>
                                        <td><%= u.drugName %></td>
                                        <td><%= u.usage %></td>
                                        <td><%= u.duration %></td>
                                        <td><%= u.createdAt.toLocaleDateString()%></td>
                                        <td>
                                            <a onclick='toRemove("<%= u._id %>", "<%= u.drugName %>", "<%= csrfToken %>")'
                                                href="#" class="btn btn-danger">Remove</a>
                                        </td>
                                        <td>
                                            <a onclick='toVerify("<%= u._id %>", "<%= u.drugName %>", "<%= csrfToken %>")'
                                                href="#" class="btn btn-success">Completed</a>
                                        </td>

                                    </tr>
                                    <% }) %>
                                    <% } %>
                                </tbody>

                            </table>
                        </div>

                    </div>


                </div>

            </div>
        </div>
    </section>

    <!--================ Start footer Area  =================-->
    <footer class="footer-area section-gap">
        <%- include('../templates/footer.ejs') %>
    </footer>
    <!--================ End footer Area  =================-->

    <!-- Boilerplate JS -->
    <!-- <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/popper.js"></script> -->
